<com:TContent ID="MainContent">
	<com:TPanel ID="loginForm">
		<div style="width:100%;">
		<center>
			<div style="text-align:left;width:400px;border:10px solid #888888;">
				<h3 style="margin:0px;">Please Login:</h3>
				<table width="100%">
					<tr>
						<td colspan="2">
							<com:TLabel ID="errorMessage" ForeColor="#ff0000"/>
						</td>
					</tr>
					<tr valign="top">
						<td><%[username]%>:</td>
						<td>
							<com:TTextBox ID="username" />
							<com:TRequiredFieldValidator
							    ControlToValidate="username"
							    ErrorMessage="<%[username]%>"
							    Display="Dynamic" />
						</td>
					</tr>
					<tr valign="top">
						<td><%[password]%>:</td>
						<td>
							<com:TTextBox ID="password" TextMode="Password" />
							<com:TRequiredFieldValidator
								    ControlToValidate="password"
								    ErrorMessage="Your entered an invalid password."
								    Display="Dynamic"
								    />
						</td>
					</tr>
					<tr>
						<td>&nbsp;</td>
						<td>
							<com:TButton Text="Login" OnClick="validateUser" />
						</td>
					</tr>
				</table>
			</div>
		</center>
		</div>
	</com:TPanel>
	<com:TPanel ID="welcomePanel">
		<%[welcome]%>, <com:TLabel ID="user" /> !
	</com:TPanel>
</com:TContent>